<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceContainer name="head.additional">
            <block ifconfig="sentry_io/configuration/is_enabled" name="sentry.io" template="MageSuite_SentryIo::sentry.phtml" before="-">
                <arguments>
                    <argument name="view_model" xsi:type="object">MageSuite\SentryIo\ViewModel\Sentry</argument>
                </arguments>
            </block>
        </referenceContainer>
    </body>
</page>
